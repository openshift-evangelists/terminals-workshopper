{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "terminals-workshopper",
        "annotations": {
            "openshift.io/display-name": "Workshopper Lab"
        }
    },
    "parameters": [
        {
            "name": "APPLICATION_NAME",
            "value": "lab",
            "required": true
        },
        {
            "name": "PUBLIC_HOSTNAME",
            "value": "",
            "required": true
        },
        {
            "name": "WORKSHOP_NAME",
            "value": "content",
            "required": true
        },
        {
            "name": "WORKSHOP_URL_PREFIX",
            "value": "https://raw.githubusercontent.com/openshift-labs/starter-guides/ocp-3.10",
            "required": true
        },
        {
            "name": "WORKSHOP_CONFIGURATION",
            "value": "https://raw.githubusercontent.com/openshift-labs/starter-guides/ocp-3.10/_workshops/python-starter-guides.yml",
            "required": true
        },
        {
            "name": "WORKSPACE_REPOSITORY_URL",
            "value": "https://github.com/openshift-evangelists/terminals-openshift-auth",
            "required": true
        },
        {
            "name": "WORKSPACE_CONTEXT_DIR",
            "value": "workspace"
        },
        {
            "name": "WORKSPACE_MEMORY_SIZE",
            "value": "1Gi"
        },
        {
            "name": "WORKSPACE_VOLUME_SIZE",
            "value": "1Gi"
        },
        {
            "name": "ADMIN_USERS",
            "value": "",
            "required": false
        },
        {
            "name": "IDLE_TIMEOUT",
            "value": "7200"
        },
        {
            "name": "OC_VERSION",
            "value": "3.10.41",
            "required": true
        }
    ],
    "objects": [
        {
            "kind": "ServiceAccount",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-hub",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                },
                "annotations": {
                    "serviceaccounts.openshift.io/oauth-redirectreference.first": "{\"kind\":\"OAuthRedirectReference\",\"apiVersion\":\"v1\",\"reference\":{\"kind\":\"Route\",\"name\":\"${APPLICATION_NAME}\"}}",
                    "serviceaccounts.openshift.io/oauth-redirecturi.first": "hub/oauth_callback",
                    "serviceaccounts.openshift.io/oauth-want-challenges": "false"
                }
            }
        },
        {
            "kind": "RoleBinding",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-edit",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            },
            "subjects": [
                {
                    "kind": "ServiceAccount",
                    "name": "${APPLICATION_NAME}-hub"
                }
            ],
            "roleRef": {
                "name": "edit"
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-hub-s2i",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-hub-s2i",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange"
                    }
                ],
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "https://github.com/jupyter-on-openshift/jupyterhub-quickstart.git"
                    }
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "python:3.6",
                            "namespace": "openshift"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APPLICATION_NAME}-hub-s2i:latest"
                    }
                }
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-hub-img",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            }
        },

        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-hub-img",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange"
                    }
                ],
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "https://github.com/openshift-evangelists/terminals-workshopper.git"
                    },
                    "contextDir": "spawner"
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "${APPLICATION_NAME}-hub-s2i:latest"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APPLICATION_NAME}-hub-img:latest"
                    }
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate"
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "spawner"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${APPLICATION_NAME}-hub-img:latest"
                            }
                        }
                    }
                ],
                "replicas": 1,
                "selector": {
                    "app": "${APPLICATION_NAME}",
                    "deploymentconfig": "${APPLICATION_NAME}"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "app": "${APPLICATION_NAME}",
                            "deploymentconfig": "${APPLICATION_NAME}"
                        }
                    },
                    "spec": {
                        "serviceAccountName": "${APPLICATION_NAME}-hub",
                        "containers": [
                            {
                                "name": "spawner",
                                "image": "${APPLICATION_NAME}-hub-img:latest",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "APPLICATION_NAME",
                                        "value": "${APPLICATION_NAME}"
                                    },
                                    {
                                        "name": "WORKSPACE_MEMORY_SIZE",
                                        "value": "${WORKSPACE_MEMORY_SIZE}"
                                    },
                                    {
                                        "name": "WORKSPACE_VOLUME_SIZE",
                                        "value": "${WORKSPACE_VOLUME_SIZE}"
                                    },
                                    {
                                        "name": "ADMIN_USERS",
                                        "value": "${ADMIN_USERS}"
                                    },
                                    {
                                        "name": "IDLE_TIMEOUT",
                                        "value": "${IDLE_TIMEOUT}"
                                    }
                                ],
                                "volumeMounts": [
                                    {
                                        "mountPath": "/opt/app-root/data",
                                        "name": "data"
                                    }
                                ]
                            }
                        ],
                        "volumes": [
                            {
                                "name": "data",
                                "persistentVolumeClaim": {
                                    "claimName": "${APPLICATION_NAME}-hub-data"
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "apiVersion": "v1",
            "kind": "PersistentVolumeClaim",
            "metadata": {
                "name": "${APPLICATION_NAME}-hub-data"
            },
            "spec": {
                "accessModes": [
                    "ReadWriteOnce"
                ],
                "resources": {
                    "requests": {
                        "storage": "1Gi"
                    }
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "8080-tcp",
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080
                    },
                    {
                        "name": "8081-tcp",
                        "protocol": "TCP",
                        "port": 8081,
                        "targetPort": 8081
                    }
                ],
                "selector": {
                    "app": "${APPLICATION_NAME}",
                    "deploymentconfig": "${APPLICATION_NAME}"
                }
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                },
                "annotations": {
                    "haproxy.router.openshift.io/hsts_header": "max-age=31536000;includeSubDomains"
                }
            },
            "spec": {
                "host": "${PUBLIC_HOSTNAME}",
                "to": {
                    "kind": "Service",
                    "name": "${APPLICATION_NAME}",
                    "weight": 100
                },
                "port": {
                    "targetPort": "8080-tcp"
                },
                "tls": {
                    "termination": "edge"
                }
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-app-base",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-app-base",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange"
                    }
                ],
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "https://github.com/openshift-evangelists/terminal-base-image.git"
                    },
                    "contextDir": "image"
                },
                "strategy": {
                    "type": "Docker",
                    "dockerStrategy": {
                        "from": {
                            "kind": "DockerImage",
                            "name": "centos/s2i-base-centos7:latest"
                        },
                        "buildArgs": [
                            {
                                "name": "OC_VERSION",
                                "value": "${OC_VERSION}"
                            }
                        ]
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APPLICATION_NAME}-app-base:latest"
                    }
                }
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-app-lang",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-app-lang",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange"
                    }
                ],
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "https://github.com/openshift-evangelists/terminal-lang-image.git"
                    },
                    "contextDir": "image"
                },
                "strategy": {
                    "type": "Docker",
                    "dockerStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "${APPLICATION_NAME}-app-base:latest"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APPLICATION_NAME}-app-lang:latest"
                    }
                }
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-app-term",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-app-term",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange"
                    }
                ],
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "${WORKSPACE_REPOSITORY_URL}"
                    },
                    "contextDir": "${WORKSPACE_CONTEXT_DIR}"
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "${APPLICATION_NAME}-app-lang:latest"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APPLICATION_NAME}-app-term:latest"
                    }
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${WORKSHOP_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Rolling"
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "selector": {
                    "app": "${APPLICATION_NAME}",
                    "deploymentconfig": "${WORKSHOP_NAME}"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "app": "${APPLICATION_NAME}",
                            "deploymentconfig": "${WORKSHOP_NAME}"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "content",
                                "image": "quay.io/osevg/workshopper:latest",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "CONTENT_URL_PREFIX",
                                        "value": "${WORKSHOP_URL_PREFIX}"
                                    },
                                    {
                                        "name": "WORKSHOPS_URLS",
                                        "value": "${WORKSHOP_CONFIGURATION}"
                                    }
                                ]
                            }
                        ]
                    }
                }
            }
        },
	{
	    "apiVersion": "v1",
	    "kind": "Service",
	    "metadata": {
		"name": "${WORKSHOP_NAME}",
		"labels": {
		    "app": "${APPLICATION_NAME}"
		}
	    },
	    "spec": {
		"ports": [
		    {
			"name": "8080-tcp",
			"port": 8080,
			"protocol": "TCP",
			"targetPort": 8080
		    }
		],
		"selector": {
		    "app": "${APPLICATION_NAME}",
		    "deploymentconfig": "${WORKSHOP_NAME}"
		}
	    }
	},
	{
	    "apiVersion": "v1",
	    "kind": "Route",
	    "metadata": {
		"name": "${WORKSHOP_NAME}",
		"labels": {
		    "app": "${APPLICATION_NAME}"
		}
	    },
	    "spec": {
		"host": "",
		"to": {
		    "kind": "Service",
		    "name": "${WORKSHOP_NAME}",
		    "weight": 100
		},
		"port": {
		    "targetPort": "8080-tcp"
		},
		"tls": {
		    "termination": "edge",
		    "insecureEdgeTerminationPolicy": "Allow"
		}
	    }
	},
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-assets",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                },
                "annotations": {
                    "haproxy.router.openshift.io/hsts_header": "max-age=31536000;includeSubDomains"
                }
            },
            "spec": {
                "host": "${PUBLIC_HOSTNAME}",
                "path": "/assets",
                "to": {
                    "kind": "Service",
                    "name": "${WORKSHOP_NAME}",
                    "weight": 100
                },
                "port": {
                    "targetPort": "8080-tcp"
                },
                "tls": {
                    "termination": "edge"
                }
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-cable",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                },
                "annotations": {
                    "haproxy.router.openshift.io/hsts_header": "max-age=31536000;includeSubDomains"
                }
            },
            "spec": {
                "host": "${PUBLIC_HOSTNAME}",
                "path": "/cable",
                "to": {
                    "kind": "Service",
                    "name": "${WORKSHOP_NAME}",
                    "weight": 100
                },
                "port": {
                    "targetPort": "8080-tcp"
                },
                "tls": {
                    "termination": "edge"
                }
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-workshop",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                },
                "annotations": {
                    "haproxy.router.openshift.io/hsts_header": "max-age=31536000;includeSubDomains"
                }
            },
            "spec": {
                "host": "${PUBLIC_HOSTNAME}",
                "path": "/workshop",
                "to": {
                    "kind": "Service",
                    "name": "${WORKSHOP_NAME}",
                    "weight": 100
                },
                "port": {
                    "targetPort": "8080-tcp"
                },
                "tls": {
                    "termination": "edge"
                }
            }
        }
    ]
}
